<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harispraba.voicediary">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".CreateNoteActivity"
            android:label="@string/label_create_note"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".authentication.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".authentication.SignUpActivity"
            android:label="@string/label_sign_up"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".authentication.ForgotPasswordActivity"
            android:label="@string/label_forgot_password"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NoteListActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.SelectFolderActivity"
            android:label="@string/label_folder_select"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>